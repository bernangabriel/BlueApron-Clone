<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BlueApron.Views.SelectPlanPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ctrl="clr-namespace:BlueApron.Controls"
    Title="Which one fits your lifestyle?"
    BackgroundColor="{StaticResource colorGreyLight}">
    <ContentPage.Content>
        <Grid Padding="20" RowSpacing="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ctrl:PlanItem
                Grid.Row="0"
                PlanDescription="Serves 2 as low as "
                PlanImage="plan_two_person.jpg"
                PlanPrice="$9.99"
                PlanTitle="Two-Person" />

            <ctrl:PlanItem
                Grid.Row="1"
                PlanDescription="Serves 2 as low as "
                PlanImage="plan_family.jpg"
                PlanPrice="$7.49"
                PlanTitle="Familiar" />

            <Label
                Grid.Row="2"
                HorizontalOptions="CenterAndExpand"
                Text="You can always change this later"
                TextColor="{StaticResource Key=colorGreyLight_100}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>